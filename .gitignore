# Ignore bundler config
/.bundle

# Ignore the default SQLite database
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore all log files
/log/*

# Ignore files generated by the doc:app task
/doc/api
/doc/app

# Ignore pidfiles, useful for puma-dev
/pids/*
!pids/
!/tmp/pids/

# Ignore system files
/.DS_Store
/.idea
/.vscode
*.swp
*~
.project
.tm_properties
.rubocop.yml
.ruby-version
.ruby-gemset

# Ignore coverage reports generated by SimpleCov
/coverage

# Ignore node_modules folder
/node_modules

# Ignore precompiled assets
/public/assets

# Ignore Yarn cache
/yarn-cache

# Ignore uploaded files in development
/storage/*

# Ignore master key for decrypting credentials and more
/config/master.key

# Ignore dotenv environment files
/.env

# Ignore tmp folder content
/tmp/*
!/tmp/.keep
!/tmp/cache/assets/sprockets/v3.0

# Ignore vendor/bundle folder
/vendor/bundle

# Ignore public/packs folder for webpacker
/public/packs
/public/packs-test
/public/packs-test-manifest.json

# Ignore Byebug command history file.
.byebug_history
